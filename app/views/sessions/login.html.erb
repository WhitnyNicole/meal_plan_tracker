<h1> Log in </h1>

<%= form_for (@user), url: '/login'  do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, required:true  %>

  <%= f.label :password %>
  <%= f.password_field :password, required:true  %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, required:true  %>

  <br><br>
  <%= f.submit "Log in" %>
<% end %>
