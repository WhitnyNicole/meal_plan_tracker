<h1> Log in </h1>

<%= form_for (@user), url: '/login'  do |f| %>
  <%= f.label :email %>
  <%= f.email_field(:email) %>

  <%= f.label :password %>
  <%= f.password_field(:password) %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field(:password_confirmation) %>

  <br><br>
  <%= f.submit "Log in" %>
<% end %>
