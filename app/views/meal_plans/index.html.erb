<h1 align="center">All the meal plans</h1>
<hr />

<% @meal_plans.each do |mealplan| %>
  <div class="row">
    <div class="col-md-2">
      <section class ="center">

      </section>
    </div>
    <div class="col-md-8 well">
       <p>Goal: <%= mealplan.goal %></p>
       <p> Description: <%= mealplan.description %></p>
       <p>
         <span class="quiet"></span><small>Created by <%= mealplan.user.name %></small></span><br><br>
         <span class="quiet"></span><small>Created <%= time_ago_in_words(mealplan.created_at) %> ago</small></span>
       </p>
    </div>
  </div>
<% end %>
