<div class="col-md-8 well">
  <%= form_for (mealplan)  do |f| %>
  <%= render partial: 'layouts/errors', locals: {object: mealplan} %>

<div class="center">
  <%= f.label :goal %>
  <%= f.select(:goal, ["Weight Loss", "Tone", "Fat Loss", "Gain Muscle", "Maintain"]) %>
</div>

<div class="center">
  <%= f.label :description %>
  <%= f.select(:description, ["Regular", "Vegetarian", "Vegan", "Pescatarian", "Gluten Free", "Keto"]) %>
</div>
  <br><br>

<div class="col-md-8 well">
  <%= m.fields_for :meal_schedule do |m|%>

<div class="center">
  <%= m.label :eating_time %>
  <%= m.select(:eating_time, ["Morning", "Afternoon", "Evening", "Night"]) %>
</div>

<div class="center">
  <%= m.label :meal_type %>
  <%= m.select(:meal_type, ["Breakfast", "Lunch", "Dinner", "Snack", "Dessert"]) %>
</div>

<div class="center">
  <%= m.label :meal_id, "Select a Meal"%>
  <%= m.collection_select :meal_id, Meal.all, :id, :protein, prompt: true %>
</div>

  <br><br>

      <h4>And add a new meal:</h4>

      <%= m.fields_for meal do |mm|%>

        <%= mm.label :protein %>
        <%= mm.text_field :protein, placeholder: "Chicken" %>

        <%= mm.label :vegetable %>
        <%= mm.text_field :vegetable, placeholder: "Spinach" %>

        <%= mm.label :side %>
        <%= mm.text_field :side, placeholder: "Fries" %>

        <%= mm.label :beverage %>
        <%= mm.text_field :beverage, placeholder: "Water" %>

        <%= mm.label :beverage_ounces %>
        <%= mm.number_field :beverage_ounces, placeholder: "16 ounces" %>

        <%= mm.label :day %>
        <%= mm.date_field :day %>

        <%= mm.label :favorite %>
        <%= mm.select :favorite, [['No', 'false'],['Yes', 'true']] %>

      <% end %>
      <% end %>

<div class="center">
  <%= f.submit %>
</div>
<% end %>
