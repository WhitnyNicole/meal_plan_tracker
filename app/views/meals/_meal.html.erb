<% obj.each do |meal| %>
  <div class="row">
    <div class="col-md-2">
      <section class ="center">
      </section>
    </div>
    <div class="col-md-8 well">
       <h5><%= link_to "Current Meal", meal_path(meal) %></h5>
        <ul>
          <li><%= meal.protein.capitalize %></li>
          <li><%= meal.vegetable.capitalize %></li>
          <li><%= meal.side.capitalize %></li>
          <li><%= meal.try(:beverage_ounces) %> ounces of <%= meal.try(:beverage) %></li>
          <li> Eaten on: <%= meal.day.strftime("%b %d, %Y") %></li>
          <li>Favorite(T/F)? <%= meal.favorite %></li>
        </ul>
       <p>
         <span class="quiet"></span><small>Created <%= time_ago_in_words(meal.created_at) %> ago</small></span>
       </p>
       <div class="mealplan-actions">
         <% if logged_in? &&  %>
           <%= link_to "Edit Meal", edit_meal_path(meal), class:"btn btn-xs btn-warning" %>
           <%= link_to "Delete Meal", meal_path(meal), method: :delete, data: { confirm: "Are you sure you want to delete this meal?"}, class:"btn btn-xs btn-danger" %>
         <% end %>
           <%= link_to "View Meal Schedules", meal_meal_schedules_path(meal), class:"btn btn-xs btn-primary" %>
       </div>

    </div>
  </div>
<% end %>
